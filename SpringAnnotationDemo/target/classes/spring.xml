<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <context:component-scan base-package="com.onlinetutorialspoint.beans" />
    <context:annotation-config />
    <bean id="college" class="com.SpringBeanDemo.code.College">
    	<property name="collegeId" value="10059"></property>
    	<property name="collegeName" value="DKTE"></property>
    </bean>
    <bean id="cse" class="com.SpringBeanDemo.code.Department">
    	<property name="deptId" value="10"></property>
    	<property name="depName" value="CSE"></property>
    </bean>
    <bean id="it" class="com.SpringBeanDemo.code.Department">
        <property name="deptId" value="15"></property>
        <property name="depName" value="Electronics"></property>
    </bean>
    <bean id="mechanical" class="com.SpringBeanDemo.code.Department">
    	<property name="deptId" value="16"></property>
    	<property name="depName" value="Mechanical"></property>
    </bean>
</beans>    